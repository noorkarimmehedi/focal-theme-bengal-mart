{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  {{ block.settings.text_font | font_face: font_display: 'swap' }}

  .scattered-layout-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 400px;
  }

  .scattered-layout__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.line_spacing }}px;
  }

  .scattered-layout__row-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: {{ block.settings.spacing }}px;
    flex-wrap: wrap;
  }

  .scattered-layout__text-{{ ai_gen_id }} {
    font-family: {{ block.settings.text_font.family }}, {{ block.settings.text_font.fallback_families }};
    font-weight: {{ block.settings.text_font.weight }};
    font-style: {{ block.settings.text_font.style }};
    font-size: {{ block.settings.font_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.2;
    margin: 0;
    white-space: nowrap;
  }

  .scattered-layout__boxed-text-{{ ai_gen_id }} {
    font-family: {{ block.settings.text_font.family }}, {{ block.settings.text_font.fallback_families }};
    font-weight: {{ block.settings.text_font.weight }};
    font-style: {{ block.settings.text_font.style }};
    font-size: {{ block.settings.font_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.2;
    margin: 0;
    padding: {{ block.settings.box_padding_vertical }}px {{ block.settings.box_padding_horizontal }}px;
    border: {{ block.settings.box_border_width }}px solid {{ block.settings.box_border_color }};
    border-radius: {{ block.settings.box_border_radius }}px;
    background-color: {{ block.settings.box_background }};
    white-space: nowrap;
  }

  .scattered-layout__image-link-{{ ai_gen_id }} {
    display: block;
    text-decoration: none;
    flex-shrink: 0;
  }

  .scattered-layout__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity }});
    transition: border-color 0.3s ease, transform 0.3s ease;
  }

  .scattered-layout__image-link-{{ ai_gen_id }}:hover .scattered-layout__image-wrapper-{{ ai_gen_id }} {
    border-color: {{ block.settings.hover_border_color }};
    transform: translateY(-2px);
  }

  .scattered-layout__image-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.image_width }}px;
    height: {{ block.settings.image_height }}px;
    object-fit: cover;
  }

  .scattered-layout__placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.image_width }}px;
    height: {{ block.settings.image_height }}px;
    background-color: {{ block.settings.placeholder_color }};
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .scattered-layout__placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.3;
  }

  @media screen and (max-width: 749px) {
    .scattered-layout__text-{{ ai_gen_id }},
    .scattered-layout__boxed-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.6 }}px;
    }

    .scattered-layout__boxed-text-{{ ai_gen_id }} {
      padding: {{ block.settings.box_padding_vertical | times: 0.7 }}px {{ block.settings.box_padding_horizontal | times: 0.7 }}px;
    }

    .scattered-layout__image-{{ ai_gen_id }},
    .scattered-layout__placeholder-{{ ai_gen_id }} {
      width: {{ block.settings.image_width | times: 0.7 }}px;
      height: {{ block.settings.image_height | times: 0.7 }}px;
    }

    .scattered-layout__row-{{ ai_gen_id }} {
      gap: {{ block.settings.spacing | times: 0.7 }}px;
    }

    .scattered-layout__container-{{ ai_gen_id }} {
      gap: {{ block.settings.line_spacing | times: 0.7 }}px;
    }
  }
