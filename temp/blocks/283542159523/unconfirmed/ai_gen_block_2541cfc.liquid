{% doc %}
  @prompt
    “Create a modern, minimal product showcase section for a Shopify store.
    The top part should show the product image without any background — clean cutout, no 3D distortion, no extra effects.
    Add a soft, natural shadow directly below the product to give a light floating look (not 3D, just subtle).
    Under this floating product, include a separate rectangular background block that contains the product title, short description, features, and price.
    Use smooth rounded corners, simple gradients or solid colors, and clean spacing.
    Overall style: premium, clean, and easy to read, with the product as the main focus.”
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-showcase-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-product-showcase-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .ai-product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: {{ block.settings.image_max_width }}px;
    margin-bottom: -{{ block.settings.overlap_offset }}px;
    z-index: 2;
  }

  .ai-product-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    filter: drop-shadow(0 {{ block.settings.shadow_offset }}px {{ block.settings.shadow_blur }}px {{ block.settings.shadow_color }});
  }

  .ai-product-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    background-color: transparent;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: auto;
    filter: drop-shadow(0 {{ block.settings.shadow_offset }}px {{ block.settings.shadow_blur }}px {{ block.settings.shadow_color }});
  }

  .ai-product-content-card-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.card_max_width }}px;
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding_top }}px {{ block.settings.card_padding_horizontal }}px {{ block.settings.card_padding_bottom }}px;
    box-shadow: 0 {{ block.settings.card_shadow_y }}px {{ block.settings.card_shadow_blur }}px {{ block.settings.card_shadow_color }};
    z-index: 1;
  }

  .ai-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_spacing }}px;
    font-weight: 600;
    line-height: 1.2;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-product-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0 0 {{ block.settings.description_spacing }}px;
    line-height: 1.6;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-product-features-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.features_spacing }}px;
  }

  .ai-product-feature-item-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: 10px;
    margin-bottom: 12px;
    font-size: {{ block.settings.feature_size }}px;
    color: {{ block.settings.feature_color }};
    line-height: 1.5;
  }

  .ai-product-feature-item-{{ ai_gen_id }}:last-child {
    margin-bottom: 0;
  }

  .ai-product-feature-icon-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: 20px;
    height: 20px;
    margin-top: 2px;
    color: {{ block.settings.feature_icon_color }};
  }

  .ai-product-price-wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
    justify-content: {{ block.settings.text_alignment }};
  }

  .ai-product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.price_color }};
    font-weight: 700;
  }

  .ai-product-compare-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.compare_price_size }}px;
    color: {{ block.settings.compare_price_color }};
    text-decoration: line-through;
    opacity: 0.7;
  }

  .ai-product-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: #999;
    font-size: 14px;
  }

  @media screen and (max-width: 749px) {
    .ai-product-showcase-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.6 }}px 16px;
    }

    .ai-product-image-wrapper-{{ ai_gen_id }} {
      max-width: {{ block.settings.image_max_width | times: 0.8 }}px;
      margin-bottom: -{{ block.settings.overlap_offset | times: 0.7 }}px;
    }

    .ai-product-content-card-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding_top | times: 0.8 }}px {{ block.settings.card_padding_horizontal | times: 0.8 }}px {{ block.settings.card_padding_bottom | times: 0.8 }}px;
    }

    .ai-product-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.85 }}px;
    }

    .ai-product-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }

    .ai-product-price-{{ ai_gen_id }} {
      font-size: {{ block.settings.price_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-product-showcase-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-showcase-container-{{ ai_gen_id }}">
    <div class="ai-product-image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.product %}
        {% if block.settings.product.featured_image %}
          <img
            src="{{ block.settings.product.featured_image | image_url: width: 1200 }}"
            alt="{{ block.settings.product.featured_image.alt | escape }}"
            class="ai-product-image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ block.settings.product.featured_image.width }}"
            height="{{ block.settings.product.featured_image.height }}"
          >
        {% else %}
          <div class="ai-product-image-placeholder-{{ ai_gen_id }}">
            {{ 'product-1' | placeholder_svg_tag }}
          </div>
        {% endif %}
      {% else %}
        <div class="ai-product-image-placeholder-{{ ai_gen_id }}">
          {{ 'product-1' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>

    <div class="ai-product-content-card-{{ ai_gen_id }}">
      {% if block.settings.product %}
        <h2 class="ai-product-title-{{ ai_gen_id }}">
          {{ block.settings.product.title }}
        </h2>

        {% if block.settings.show_description and block.settings.product.description != blank %}
          <div class="ai-product-description-{{ ai_gen_id }}">
            {{ block.settings.product.description | strip_html | truncate: 200 }}
          </div>
        {% endif %}

        {% if block.settings.show_features %}
          <div class="ai-product-features-{{ ai_gen_id }}">
            {% if block.settings.feature_1 != blank %}
              <div class="ai-product-feature-item-{{ ai_gen_id }}">
                <svg class="ai-product-feature-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
                <span>{{ block.settings.feature_1 }}</span>
              </div>
            {% endif %}

            {% if block.settings.feature_2 != blank %}
              <div class="ai-product-feature-item-{{ ai_gen_id }}">
                <svg class="ai-product-feature-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
                <span>{{ block.settings.feature_2 }}</span>
              </div>
            {% endif %}

            {% if block.settings.feature_3 != blank %}
              <div class="ai-product-feature-item-{{ ai_gen_id }}">
                <svg class="ai-product-feature-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
                <span>{{ block.settings.feature_3 }}</span>
              </div>
            {% endif %}

            {% if block.settings.feature_4 != blank %}
              <div class="ai-product-feature-item-{{ ai_gen_id }}">
                <svg class="ai-product-feature-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
                <span>{{ block.settings.feature_4 }}</span>
              </div>
            {% endif %}
          </div>
        {% endif %}

        <div class="ai-product-price-wrapper-{{ ai_gen_id }}">
          <div class="ai-product-price-{{ ai_gen_id }}">
            {{ block.settings.product.price | money }}
          </div>
          {% if block.settings.product.compare_at_price > block.settings.product.price %}
            <div class="ai-product-compare-price-{{ ai_gen_id }}">
              {{ block.settings.product.compare_at_price | money }}
            </div>
          {% endif %}
        </div>
      {% else %}
        <div class="ai-product-empty-state-{{ ai_gen_id }}">
          Select a product to showcase
        </div>
      {% endif %}
    </div>
  </div>
</div>

