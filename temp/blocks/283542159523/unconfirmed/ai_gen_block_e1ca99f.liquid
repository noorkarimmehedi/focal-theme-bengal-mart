{% doc %}
  @prompt
    “Create a clean product showcase section similar to a modern fashion website.
    Use a large rounded-rectangle card with soft, diffused shadow behind it.
    Place the product image inside the card on the right side — no background removal needed, just a clean cutout image.
    On the left side inside the card, add minimal text: product title, short line, and a small CTA link.
    Keep the colors neutral (white/light gray), spacing clean, and overall layout premium and minimal.”, i have uploaded a removed background product image. the product details should in the top and a little bit below of the image
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-showcase-{{ ai_gen_id }} {
    width: 100%;
    padding: 40px 20px;
    background-color: {{ block.settings.section_background }};
  }

  .ai-product-showcase-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.card_max_width }}px;
    margin: 0 auto;
  }

  .ai-product-showcase-card-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    box-shadow: 0 {{ block.settings.shadow_offset_y }}px {{ block.settings.shadow_blur }}px {{ block.settings.shadow_spread }}px {{ block.settings.shadow_color }};
    overflow: hidden;
    position: relative;
  }

  .ai-product-showcase-content-{{ ai_gen_id }} {
    padding: {{ block.settings.content_padding_top }}px 60px {{ block.settings.content_padding_bottom }}px;
    display: flex;
    flex-direction: column;
    gap: 20px;
    z-index: 2;
    position: relative;
  }

  .ai-product-showcase-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0;
    line-height: 1.2;
  }

  .ai-product-showcase-divider-{{ ai_gen_id }} {
    width: {{ block.settings.divider_width }}px;
    height: {{ block.settings.divider_height }}px;
    background-color: {{ block.settings.divider_color }};
    margin: 0;
  }

  .ai-product-showcase-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.6;
    margin: 0;
  }

  .ai-product-showcase-cta-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: {{ block.settings.cta_size }}px;
    color: {{ block.settings.cta_color }};
    text-decoration: none;
    font-weight: 500;
    transition: gap 0.3s ease;
    align-self: flex-start;
  }

  .ai-product-showcase-cta-{{ ai_gen_id }}:hover {
    gap: 12px;
  }

  .ai-product-showcase-cta-arrow-{{ ai_gen_id }} {
    width: 16px;
    height: 16px;
    stroke: {{ block.settings.cta_color }};
  }

  .ai-product-showcase-image-wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 40px {{ block.settings.image_padding_bottom }}px;
    position: relative;
  }

  .ai-product-showcase-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    object-fit: contain;
    max-height: {{ block.settings.image_max_height }}px;
  }

  .ai-product-showcase-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
    border-radius: 8px;
    position: relative;
  }

  .ai-product-showcase-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
    opacity: 0.3;
  }

  .ai-product-showcase-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-product-showcase-{{ ai_gen_id }} {
      padding: 20px 15px;
    }

    .ai-product-showcase-content-{{ ai_gen_id }} {
      padding: 30px 20px 20px;
    }

    .ai-product-showcase-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-product-showcase-image-wrapper-{{ ai_gen_id }} {
      padding: 0 20px 30px;
    }

    .ai-product-showcase-image-{{ ai_gen_id }} {
      max-height: {{ block.settings.image_max_height | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="ai-product-showcase-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-showcase-container-{{ ai_gen_id }}">
    <div class="ai-product-showcase-card-{{ ai_gen_id }}">
      <div class="ai-product-showcase-content-{{ ai_gen_id }}">
        {% if block.settings.product_title != blank %}
          <h2 class="ai-product-showcase-title-{{ ai_gen_id }}">
            {{ block.settings.product_title }}
          </h2>
        {% endif %}

        {% if block.settings.show_divider %}
          <div class="ai-product-showcase-divider-{{ ai_gen_id }}"></div>
        {% endif %}

        {% if block.settings.product_description != blank %}
          <div class="ai-product-showcase-description-{{ ai_gen_id }}">
            {{ block.settings.product_description }}
          </div>
        {% endif %}

        {% if block.settings.cta_text != blank and block.settings.cta_link != blank %}
          <a href="{{ block.settings.cta_link }}" class="ai-product-showcase-cta-{{ ai_gen_id }}">
            {{ block.settings.cta_text }}
            <svg class="ai-product-showcase-cta-arrow-{{ ai_gen_id }}" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M1 8H15M15 8L8 1M15 8L8 15" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        {% endif %}
      </div>

      <div class="ai-product-showcase-image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.product_image %}
          <img
            src="{{ block.settings.product_image | image_url: width: 1200 }}"
            alt="{{ block.settings.product_image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.product_image.width }}"
            height="{{ block.settings.product_image.height }}"
            class="ai-product-showcase-image-{{ ai_gen_id }}"
          >
        {% else %}
          <div class="ai-product-showcase-placeholder-{{ ai_gen_id }}">
            {{ 'product-1' | placeholder_svg_tag }}
            <div class="ai-product-showcase-empty-state-{{ ai_gen_id }}">
              Add a product image
            </div>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

