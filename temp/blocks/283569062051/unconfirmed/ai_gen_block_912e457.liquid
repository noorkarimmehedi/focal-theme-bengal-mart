{% doc %}
  @prompt
    Shopify Section:
    Layout & Composition:
    
    Split Layout: The section uses a classic 50/50 split with the product image on the right and text/CTA on the left
    White Space: Generous use of negative space creates a clean, premium feel
    Visual Hierarchy: Clear flow from product name â†’ CTA button
    
    Typography:
    
    Product Title: "POLO T-SHIRT" in uppercase, likely a sans-serif font, appears understated and elegant
    CTA Text: "DISCOVER NOW" is smaller but clear, inviting exploration
    
    Color Scheme:
    
    Minimalist palette with neutral tones (white/off-white background)
    Creates a sophisticated, high-end aesthetic
    The white shirt against the light background keeps focus on the product
    
    User Experience Elements:
    
    Clear CTA: "DISCOVER NOW" suggests clicking will lead to more product details
    Product Focus: Large, high-quality product image showing the item being worn (lifestyle shot)
    Minimal Distraction: No clutter, pricing, or excessive information - just enough to create interest
    Mobile-Friendly: This layout typically adapts well to mobile with the image stacking above the text
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-split-showcase-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    min-height: {{ block.settings.section_height }}px;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.vertical_padding }}px {{ block.settings.horizontal_padding }}px;
  }

  .ai-split-showcase-container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.content_gap }}px;
    width: 100%;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    align-items: center;
  }

  .ai-split-showcase-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.text_spacing }}px;
    {% if block.settings.layout == 'image_right' %}
      order: 1;
    {% else %}
      order: 2;
    {% endif %}
  }

  .ai-split-showcase-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    color: {{ block.settings.title_color }};
    text-transform: {{ block.settings.title_transform }};
    letter-spacing: {{ block.settings.letter_spacing }}px;
    line-height: 1.2;
    margin: 0;
  }

  .ai-split-showcase-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.6;
    margin: 0;
  }

  .ai-split-showcase-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    letter-spacing: {{ block.settings.button_letter_spacing }}px;
    text-transform: {{ block.settings.button_text_transform }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: all 0.3s ease;
    cursor: pointer;
    width: fit-content;
  }

  .ai-split-showcase-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  .ai-split-showcase-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
    {% if block.settings.layout == 'image_right' %}
      order: 2;
    {% else %}
      order: 1;
    {% endif %}
  }

  .ai-split-showcase-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-split-showcase-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    min-height: 400px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-split-showcase-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-split-showcase-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 989px) {
    .ai-split-showcase-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.mobile_gap }}px;
    }

    .ai-split-showcase-content-{{ ai_gen_id }} {
      order: 2;
      text-align: {{ block.settings.mobile_text_align }};
      align-items: {% if block.settings.mobile_text_align == 'center' %}center{% elsif block.settings.mobile_text_align == 'right' %}flex-end{% else %}flex-start{% endif %};
    }

    .ai-split-showcase-image-wrapper-{{ ai_gen_id }} {
      order: 1;
    }

    .ai-split-showcase-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-split-showcase-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }

    .ai-split-showcase-{{ ai_gen_id }} {
      padding: {{ block.settings.vertical_padding | times: 0.6 }}px {{ block.settings.horizontal_padding | times: 0.6 }}px;
    }
  }
{% endstyle %}

<div class="ai-split-showcase-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-split-showcase-container-{{ ai_gen_id }}">
    <div class="ai-split-showcase-content-{{ ai_gen_id }}">
      {% if block.settings.product_title != blank %}
        <h2 class="ai-split-showcase-title-{{ ai_gen_id }}">{{ block.settings.product_title }}</h2>
      {% endif %}

      {% if block.settings.description != blank %}
        <div class="ai-split-showcase-description-{{ ai_gen_id }}">
          {{ block.settings.description }}
        </div>
      {% endif %}

      {% if block.settings.button_text != blank %}
        <a
          href="{{ block.settings.button_link }}"
          class="ai-split-showcase-button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>

    <div class="ai-split-showcase-image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.product_image %}
        <img
          src="{{ block.settings.product_image | image_url: width: 1200 }}"
          alt="{{ block.settings.product_image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.product_image.width }}"
          height="{{ block.settings.product_image.height }}"
          class="ai-split-showcase-image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-split-showcase-image-placeholder-{{ ai_gen_id }}">
          {{ 'product-apparel-1' | placeholder_svg_tag }}
          <div class="ai-split-showcase-empty-state-{{ ai_gen_id }}">
            Add a product image
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

