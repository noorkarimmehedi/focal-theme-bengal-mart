{% doc %}
  @prompt
    “Design a clean clothing section with oversized bold typography arranged in stacked lines. Insert rounded-rectangle product and model photos between the words for a playful, aesthetic look. Use soft shadows, white background, balanced spacing, and a modern beauty-brand style that feels fresh, glowy, and minimal.” everyhting should be customizable from font to color to size to radius . custom image can be uploaded
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-clothing-section-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px 20px;
    overflow: hidden;
  }

  .ai-clothing-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-clothing-stack-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.line_spacing }}px;
    align-items: {{ block.settings.text_alignment }};
  }

  .ai-clothing-line-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.element_spacing }}px;
    flex-wrap: wrap;
    justify-content: {{ block.settings.text_alignment }};
  }

  .ai-clothing-text-{{ ai_gen_id }} {
    font-family: {{ block.settings.text_font.family }}, {{ block.settings.text_font.fallback_families }};
    font-weight: {{ block.settings.text_font.weight }};
    font-style: {{ block.settings.text_font.style }};
    font-size: {{ block.settings.font_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1;
    margin: 0;
    text-transform: {{ block.settings.text_transform }};
    letter-spacing: {{ block.settings.letter_spacing }}px;
  }

  .ai-clothing-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
    box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px {{ block.settings.shadow_spread }}px {{ block.settings.shadow_color }};
    flex-shrink: 0;
  }

  .ai-clothing-image-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.image_width }}px;
    height: {{ block.settings.image_height }}px;
    object-fit: cover;
  }

  .ai-clothing-image-placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.image_width }}px;
    height: {{ block.settings.image_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-clothing-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  @media screen and (max-width: 749px) {
    .ai-clothing-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.6 }}px;
    }

    .ai-clothing-image-{{ ai_gen_id }},
    .ai-clothing-image-placeholder-{{ ai_gen_id }} {
      width: {{ block.settings.image_width | times: 0.6 }}px;
      height: {{ block.settings.image_height | times: 0.6 }}px;
    }

    .ai-clothing-stack-{{ ai_gen_id }} {
      gap: {{ block.settings.line_spacing | times: 0.7 }}px;
    }

    .ai-clothing-line-{{ ai_gen_id }} {
      gap: {{ block.settings.element_spacing | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="ai-clothing-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-clothing-container-{{ ai_gen_id }}">
    <div class="ai-clothing-stack-{{ ai_gen_id }}">
      
      <div class="ai-clothing-line-{{ ai_gen_id }}">
        {% if block.settings.text_line_1 != blank %}
          <h2 class="ai-clothing-text-{{ ai_gen_id }}">{{ block.settings.text_line_1 }}</h2>
        {% endif %}
        
        {% if block.settings.show_image_1 %}
